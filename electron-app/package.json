{
    "name": "quicktype-pro-desktop",
    "version": "2.0.0",
    "description": "QuickType Pro - Pano Yönetim Merkezi (Desktop)",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && set ELECTRON_START_URL=http://localhost:3000 && electron .\"",
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "build": "npm run react-build && electron-builder",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.quicktype.pro.desktop",
        "productName": "QuickType Pro",
        "directories": {
            "output": "dist"
        },
        "files": [
            "build/**/*",
            "main.js",
            "preload.js",
            "public/**/*"
        ],
        "extraMetadata": {
            "main": "main.js"
        },
        "extraResources": [
            {
                "from": "backend",
                "to": "backend",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/icon.ico",
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/icon.ico",
            "uninstallerIcon": "public/icon.ico"
        }
    },
    "keywords": [
        "quicktype",
        "clipboard",
        "sync"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ozymandias-get/quicktype-pro.git"
    },
    "author": "Umut Üstün",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "socket.io-client": "^4.7.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version"
        ]
    },
    "homepage": "./"
}